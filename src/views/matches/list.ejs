<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="/css/main.css">
</head>
<body>
    <%- include('../partials/header') %>

    <main class="app-main">
        <section class="page-intro">
            <span class="page-kicker">
                <i class="bi bi-trophy"></i>
                Matches
            </span>
            <h1 class="page-title">Recent Match Results</h1>
            <p class="page-subtitle">
                Filter by league and browse paginated finished fixtures.
            </p>
        </section>

        <section class="app-card app-card-muted">
            <form method="GET" action="/matches" class="row g-3">
                <div class="col-12 col-md-4">
                    <label for="league" class="form-label">League</label>
                    <select id="league" name="league" class="form-select">
                        <option value="">All leagues</option>
                        <% (leagues || []).forEach(league => { %>
                            <option
                                value="<%= league.id %>"
                                <%= Number(filters?.leagueId) === Number(league.id) ? 'selected' : '' %>
                            >
                                <%= league.name %><%= league.country ? ` (${league.country})` : '' %>
                            </option>
                        <% }); %>
                    </select>
                </div>
                <div class="col-12 col-md-3 d-flex align-items-end">
                    <div class="button-row w-100">
                        <button type="submit" class="btn-app w-100">
                            <i class="bi bi-funnel"></i>
                            Apply
                        </button>
                        <a href="/matches" class="btn-app btn-app-secondary w-100">
                            <i class="bi bi-x-circle"></i>
                            Reset
                        </a>
                    </div>
                </div>
                <div class="col-12 col-md-5 d-flex align-items-end justify-content-md-end">
                    <span class="pill-counter">
                        <i class="bi bi-collection-play"></i>
                        <%= pagination?.totalItems || 0 %> total matches
                    </span>
                </div>
            </form>
        </section>

        <% if (matches && matches.length > 0) { %>
            <section class="app-card">
                <div class="match-list">
                    <% matches.forEach(match => { %>
                        <article class="match-card">
                            <div class="match-head">
                                <span class="match-date">
                                    <%= new Date(match.match_date).toLocaleDateString('en-US', {
                                        weekday: 'short',
                                        year: 'numeric',
                                        month: 'short',
                                        day: 'numeric'
                                    }) %>
                                </span>
                                <span class="status-badge <%= match.status === 'FT' ? 'status-finished' : 'status-live' %>">
                                    <%= match.status %>
                                </span>
                            </div>

                            <div class="match-teams">
                                <span class="team-name"><%= match.home_team_name %></span>
                                <span class="score-pill <%= match.home_score > match.away_score ? 'winner' : '' %>">
                                    <%= match.home_score %> - <%= match.away_score %>
                                </span>
                                <span class="team-name right"><%= match.away_team_name %></span>
                            </div>

                            <p class="muted-text mt-2 mb-0">
                                <i class="bi bi-trophy"></i> <%= match.league_name || 'League' %>
                            </p>

                            <% if (match.venue) { %>
                                <p class="muted-text mt-1 mb-0">
                                    <i class="bi bi-geo-alt"></i> <%= match.venue %>
                                </p>
                            <% } %>

                            <div class="button-row mt-3">
                                <a href="/matches/<%= match.id %>" class="btn-app btn-app-secondary">
                                    <i class="bi bi-eye"></i>
                                    View Match
                                </a>
                            </div>
                        </article>
                    <% }); %>
                </div>
            </section>

            <% if (pagination && pagination.total > 1) { %>
                <section class="app-card app-card-muted">
                    <div class="d-flex align-items-center justify-content-between flex-wrap gap-2">
                        <span class="muted-text">
                            Page <%= pagination.current %> of <%= pagination.total %>
                        </span>
                        <div class="button-row">
                            <% if (pagination.current > 1) { %>
                                <a
                                    class="btn-app btn-app-secondary"
                                    href="/matches?page=<%= pagination.current - 1 %><%= filters?.leagueId ? `&league=${filters.leagueId}` : '' %>"
                                >
                                    <i class="bi bi-chevron-left"></i>
                                    Prev
                                </a>
                            <% } %>
                            <% if (pagination.current < pagination.total) { %>
                                <a
                                    class="btn-app btn-app-secondary"
                                    href="/matches?page=<%= pagination.current + 1 %><%= filters?.leagueId ? `&league=${filters.leagueId}` : '' %>"
                                >
                                    Next
                                    <i class="bi bi-chevron-right"></i>
                                </a>
                            <% } %>
                        </div>
                    </div>
                </section>
            <% } %>
        <% } else { %>
            <section class="app-card">
                <div class="empty-state">
                    <h3>No Matches Found</h3>
                    <p>No finished matches found for the selected filters.</p>
                </div>
            </section>
        <% } %>
    </main>

    <%- include('../partials/footer') %>
</body>
</html>
